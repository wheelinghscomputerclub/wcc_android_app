<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.d214.whs.wcc.portal.About$PlaceholderFragment" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/whs_app_icon" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Version 1.1"
        android:textColor="#444444" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#444444"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:text="WHS Application" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:textColor="#444444"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:text="Wheeling High School Students" />
    
    <View 
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="15dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:background="#999999"/>
    
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="16dp"
        android:text="As Wheeling High School students we recognize the necessity of technological integration into the classroom. We take pride in making your high school career easier and more enjoyable."
        android:textAlignment="center"
        android:textColor="#444444" />

    <TextView
        android:id="@+id/textView4"
        android:textColor="#444444"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="License info:" />

    <TextView
        android:id="@+id/linkAC"
        android:layout_width="wrap_content"
        android:textColor="#33b5e5"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Apache Commons" />

    <TextView
        android:id="@+id/linkGG"
        android:textColor="#33b5e5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/linkAC"
        android:layout_centerHorizontal="true"
        android:text="Google GSON" />

    <TextView
        android:id="@+id/linkJS"
        android:textColor="#33b5e5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linkGG"
        android:layout_centerHorizontal="true"
        android:text="JSOUP - MIT" />

    
</RelativeLayout>
